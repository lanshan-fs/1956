/* 页面背景 */
page {
  background-color: var(--background);
}

.page-home {
  padding-bottom: 150rpx; /* 留出底部 TabBar 空间 */
}

/* --- 自定义导航栏 --- */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  background-color: var(--background); /* 与背景同色 */
  /* 可以加个底边框区分 */
  /* border-bottom: 2rpx solid rgba(0,0,0,0.05); */
}

.nav-content {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  position: relative;
}

.nav-left, .nav-right {
  width: 60rpx; /* 左右同宽，保证标题居中 */
  display: flex;
  align-items: center;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 900; /* 粗体 */
  color: #1A1A1A;
  letter-spacing: 2rpx;
  font-family: 'Impact', fantasy, sans-serif;
  position: absolute;
  left: 50%;
  transform: translateX(-50%); /* 绝对居中 */
}

/* --- 分类 Tabs --- */
.tabs-scroll {
  height: 80rpx;
  background: var(--background);
  position: sticky; /* 吸附在自定义导航栏下方 */
  z-index: 99;
}

.tabs-container {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  height: 100%;
}

.tab-item {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
  border-radius: 999rpx;
  margin-right: 16rpx;
  border: 4rpx solid transparent;
  white-space: nowrap;
}

/* 选中态：黄色贴纸风格 */
.tab-item.active {
  background-color: #FFD93D;
  color: #1A1A1A;
  border: 4rpx solid #000;
  box-shadow: 4rpx 4rpx 0 0 #000;
  transform: translate(-2rpx, -2rpx);
}

/* --- 瀑布流 --- */
.waterfall-container {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 12rpx;
  align-items: flex-start;
}

.column {
  width: 48%;
}