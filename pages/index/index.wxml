<view class="container page-home">
  <view class="header-section">
    <view class="search-icon-wrapper" bindtap="onSearch">
      <icon type="search" size="22" color="#1A1A1A"/>
    </view>
    
    <scroll-view scroll-x class="tabs-scroll" enable-flex show-scrollbar="{{false}}">
      <view class="tabs-container">
        <view 
          wx:for="{{tabs}}" 
          wx:key="id" 
          class="tab-item {{currentTab === index ? 'active' : ''}}"
          bindtap="switchTab"
          data-index="{{index}}"
        >
          {{item.name}}
        </view>
      </view>
    </scroll-view>
  </view>

  <view class="waterfall-container">
    <view class="column">
      <block wx:for="{{leftList}}" wx:key="id">
        <neo-card 
          title="{{item.title}}" 
          cover="{{item.cover}}" 
          avatar="{{item.avatar}}"
          nickname="{{item.nickname}}"
          likes="{{item.likes}}"
          isLiked="{{item.isLiked}}"
        />
      </block>
    </view>
    <view class="column">
      <block wx:for="{{rightList}}" wx:key="id">
        <neo-card 
          title="{{item.title}}" 
          cover="{{item.cover}}" 
          avatar="{{item.avatar}}"
          nickname="{{item.nickname}}"
          likes="{{item.likes}}"
          isLiked="{{item.isLiked}}"
        />
      </block>
    </view>
  </view>
</view>