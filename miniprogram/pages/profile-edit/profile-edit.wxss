/* miniprogram/pages/profile-edit/profile-edit.wxss */
.container {
  padding: 40rpx;
  background-color: var(--background);
}

/* 头像区域 */
.avatar-section {
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
}

.avatar-box {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border: var(--border-width) solid var(--border-color);
  background: var(--accent);
  box-shadow: 8rpx 8rpx 0px var(--border-color);
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-edit-tag {
  position: absolute;
  bottom: -10rpx;
  right: -10rpx;
  background: var(--primary);
  color: #fff;
  font-size: 20rpx;
  font-weight: 800;
  padding: 4rpx 12rpx;
  border: 3rpx solid var(--border-color);
}

/* 表单样式 */
.form-group {
  margin-bottom: 60rpx;
}

.form-item {
  margin-bottom: 40rpx;
  position: relative;
}

.label {
  display: block;
  font-size: 26rpx;
  font-weight: 900;
  margin-bottom: 16rpx;
  color: var(--text-main);
}

.neo-input {
  height: 100rpx;
  border: var(--border-width) solid var(--border-color);
  background: #fff;
  padding: 0 30rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 4rpx 4rpx 0px var(--border-color);
}

.neo-textarea {
  width: 100%;
  height: 200rpx;
  border: var(--border-width) solid var(--border-color);
  background: #fff;
  padding: 24rpx 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  box-shadow: 4rpx 4rpx 0px var(--border-color);
}

.char-count {
  text-align: right;
  font-size: 20rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 按钮区域 */
.save-btn {
  background: var(--primary);
  color: #fff;
  border: var(--border-width) solid var(--border-color);
  box-shadow: 8rpx 8rpx 0px var(--border-color);
  font-weight: 900;
  font-size: 32rpx;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0;
}

.save-btn:active {
  box-shadow: none;
  transform: translate(4rpx, 4rpx);
}