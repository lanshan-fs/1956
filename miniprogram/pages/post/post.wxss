/* Neobrutalism Style Variables */
page {
  background-color: #f4f3ee; /* 米白色背景，温和护眼 */
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.container {
  padding: 32rpx;
}

/* 通用新粗野盒子 */
.neo-box {
  border: 4rpx solid #000;
  background: #fff;
  box-shadow: 6rpx 6rpx 0px 0px #000; /* 硬阴影 */
  border-radius: 0; /* 直角或极小圆角 */
}

/* 输入框 */
.input-box {
  padding: 24rpx;
  min-height: 300rpx;
  background: #fff;
  border: 4rpx solid #000;
  box-shadow: 8rpx 8rpx 0 0 #000;
  margin-bottom: 40rpx;
}

.post-input {
  width: 100%;
  height: 280rpx;
  font-size: 30rpx;
  line-height: 1.6;
  color: #000;
}

/* 图片网格 */
.media-section {
  margin-bottom: 40rpx;
}

.grid-3 {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.grid-item {
  width: 100%;
  padding-bottom: 100%; /* 正方形 */
  position: relative;
}

.neo-img-box {
  border: 4rpx solid #000;
  box-shadow: 4rpx 4rpx 0 0 #000;
}

.uploaded-img {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

/* 添加按钮样式 */
.add-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #a3e635; /* 柠檬绿，充满活力 */
}

.plus-icon {
  font-size: 80rpx;
  font-weight: 900;
  color: #000;
  margin-top: -10rpx;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: #ff6b6b;
  border: 2rpx solid #000;
  color: #fff;
  width: 40rpx;
  height: 40rpx;
  line-height: 36rpx;
  text-align: center;
  font-weight: bold;
  z-index: 10;
}

/* 标签区域 */
.tags-section {
  margin-bottom: 60rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 900;
  margin-bottom: 20rpx;
  color: #000;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.neo-tag {
  padding: 12rpx 30rpx;
  border: 3rpx solid #000;
  font-weight: bold;
  font-size: 26rpx;
  box-shadow: 4rpx 4rpx 0 0 #000;
  transition: all 0.1s;
}

.neo-tag.active {
  transform: translate(2rpx, 2rpx);
  box-shadow: 2rpx 2rpx 0 0 #000;
  filter: brightness(0.9);
}

/* 发布按钮 */
.publish-btn {
  background: #000;
  color: #fff;
  border: 4rpx solid #000;
  border-radius: 0;
  font-size: 36rpx;
  font-weight: 900;
  box-shadow: 8rpx 8rpx 0 0 #888; /* 灰色阴影 */
  height: 100rpx;
  line-height: 92rpx;
}

.publish-btn:active {
  transform: translate(4rpx, 4rpx);
  box-shadow: 4rpx 4rpx 0 0 #888;
}