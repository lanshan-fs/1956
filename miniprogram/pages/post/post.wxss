/* pages/post/post.wxss */
page {
  background-color: var(--background);
}

.page-post {
  padding: 24rpx;
  padding-bottom: 240rpx;
}

/* 阴影盒子通用类 */
.shadow-box {
  background-color: #fff;
  border: var(--border-width) solid var(--border-color);
  box-shadow: 4rpx 4rpx 0 0 var(--border-color);
  border-radius: 12rpx;
}

/* 1. 媒体网格 */
.media-section {
  margin-bottom: 32rpx;
}

.media-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.media-item {
  width: 100%;
  padding-bottom: 100%;
  position: relative;
}

.media-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.media-del {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: var(--primary);
  color: #fff;
  border: 2rpx solid var(--border-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 900;
  font-size: 28rpx;
}

.add-btn {
  background-color: #FAFAFA;
}

.add-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 60rpx;
  color: #ccc;
}

/* 2. 编辑区 */
.edit-area {
  padding: 12rpx 0;
  margin-bottom: 24rpx;
}

.title-input {
  font-size: 34rpx;
  font-weight: 800;
  height: 80rpx;
  color: var(--text-main);
}

.divider {
  height: 2rpx;
  background-color: #f0f0f0;
  margin: 16rpx 0;
}

.content-textarea {
  width: 100%;
  min-height: 200rpx;
  font-size: 30rpx;
  line-height: 1.6;
  color: var(--text-main);
  margin-bottom: 24rpx;
}

/* 语音气泡 (融入正文) */
.voice-preview-bubble {
  display: inline-flex;
  align-items: center;
  padding: 16rpx 24rpx;
  border-radius: 40rpx;
  background-color: var(--accent); /* 连翘黄 */
  position: relative;
  margin-bottom: 20rpx;
}

.voice-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.voice-duration {
  font-size: 26rpx;
  font-weight: 800;
  color: var(--text-main);
}

.voice-del {
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: 900;
  color: rgba(0,0,0,0.3);
}

.placeholder { color: #bbb; font-weight: 400; }

/* 3. 快捷工具栏 (胶囊化且支持溢出) */
.quick-toolbar {
  display: flex;
  flex-wrap: wrap; /* 自动换行或可改为 scroll-view */
  gap: 16rpx;
  margin-bottom: 48rpx;
}

.tool-item {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 10rpx 24rpx;
  border-radius: 40rpx;
  border: 2rpx solid #eee;
  transition: all 0.2s;
}

.tool-item:active {
  background-color: #f5f5f5;
  border-color: #ddd;
}

.tool-icon {
  font-size: 26rpx;
  margin-right: 8rpx;
  font-weight: bold;
}

.tool-text {
  font-size: 24rpx;
  color: #666;
  font-weight: 600;
}

/* 4. 设置列表 */
.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  margin-bottom: 16rpx;
}

.item-left { display: flex; align-items: center; }
.item-icon { font-size: 32rpx; margin-right: 20rpx; }
.item-label { font-size: 28rpx; font-weight: 700; }
.item-right { display: flex; align-items: center; }
.item-value { font-size: 26rpx; color: var(--primary); margin-right: 12rpx; font-weight: 600; }
.arrow { font-size: 24rpx; color: #ccc; }

/* 5. 底部动作条 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 24rpx 32rpx 80rpx;
  background: var(--background);
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.draft-btn {
  flex: 1;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 800;
  margin-right: 24rpx;
}

.post-btn {
  flex: 2;
  height: 90rpx;
  background-color: #f0f0f0;
  color: #ccc;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 900;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
  border: var(--border-width) solid var(--border-color);
}

.post-btn.active {
  background-color: var(--primary);
  color: #fff;
  box-shadow: 4rpx 4rpx 0 0 var(--border-color);
}