/* 页面背景：米白护眼 */
page {
  background-color: #f4f3ee;
  font-family: system-ui, -apple-system, sans-serif;
  color: #000;
}

.container {
  padding: 32rpx;
}

/* 新粗野主义通用盒子：粗边框、硬阴影 */
.neo-card {
  background: #fff;
  border: 4rpx solid #000;
  box-shadow: 8rpx 8rpx 0 0 #000;
  border-radius: 0; /* 直角 */
  margin-bottom: 40rpx;
}

/* 输入框 */
.input-box {
  padding: 24rpx;
  min-height: 300rpx;
}

.post-input {
  width: 100%;
  height: 280rpx;
  font-size: 30rpx;
  line-height: 1.6;
  color: #000;
}

/* 图片网格 3列 */
.grid-3 {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.grid-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%; /* 保持正方形 */
}

.neo-img-box {
  border: 4rpx solid #000;
  box-shadow: 4rpx 4rpx 0 0 #000;
  background: #fff;
}

.uploaded-img {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

/* 添加按钮 */
.add-btn {
  background: #a3e635; /* 柠檬绿：活力 */
  border: 4rpx solid #000;
  box-shadow: 4rpx 4rpx 0 0 #000;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 绝对定位修正加号居中 */
.add-btn .plus-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -55%);
  font-size: 80rpx;
  font-weight: 900;
  color: #000;
}

/* 删除按钮 */
.delete-btn {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 44rpx;
  height: 44rpx;
  line-height: 40rpx;
  text-align: center;
  background: #ff6b6b;
  border: 2rpx solid #000;
  color: #fff;
  font-weight: bold;
  z-index: 10;
  font-size: 32rpx;
}

/* 标签区 */
.tags-section {
  margin-top: 40rpx;
  margin-bottom: 120rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 900;
  margin-bottom: 24rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.neo-tag {
  padding: 16rpx 36rpx;
  border: 3rpx solid #000;
  background: #fff;
  font-weight: bold;
  font-size: 28rpx;
  box-shadow: 4rpx 4rpx 0 0 #000;
  transition: all 0.1s;
}

.neo-tag.active {
  transform: translate(2rpx, 2rpx);
  box-shadow: 2rpx 2rpx 0 0 #000;
}

/* 底部按钮 */
.publish-btn {
  background: #000;
  color: #fff;
  border: 4rpx solid #000;
  border-radius: 0;
  font-size: 36rpx;
  font-weight: 900;
  height: 100rpx;
  line-height: 92rpx;
  box-shadow: 8rpx 8rpx 0 0 #888;
}

.publish-btn:active {
  transform: translate(4rpx, 4rpx);
  box-shadow: 4rpx 4rpx 0 0 #888;
}