<view class="container page-home">
  
  <!-- Block 1: 顶部导航栏 (组件化) -->
  <neo-nav 
    title="1956 | BUCM" 
    bind:search="onSearch" 
    bind:heightchange="onNavHeightChange"
  />

  <!-- Block 2: 标签栏与管理面板 (组件化) -->
  <neo-tabs-bar
    tabs="{{myChannels}}"
    recommendTabs="{{recommendChannels}}"
    active="{{currentTab}}"
    top="{{navHeaderHeight}}"
    bind:change="switchTab"
    bind:add="addChannel"
    bind:remove="removeChannel"
  />

  <!-- Block 3: 瀑布流 -->
  <view class="waterfall-container">
    <view class="column">
      <block wx:for="{{leftList}}" wx:key="id">
        <neo-card 
          title="{{item.title}}" 
          cover="{{item.cover}}" 
          nickname="{{item.nickname}}" 
          likes="{{item.likes}}" 
          isLiked="{{item.isLiked}}"
          bind:click="onCardClick"
          data-id="{{item.id}}"
        />
      </block>
    </view>
    <view class="column">
      <block wx:for="{{rightList}}" wx:key="id">
        <neo-card 
          title="{{item.title}}" 
          cover="{{item.cover}}" 
          nickname="{{item.nickname}}" 
          likes="{{item.likes}}" 
          isLiked="{{item.isLiked}}"
          bind:click="onCardClick"
          data-id="{{item.id}}"
        />
      </block>
    </view>
  </view>
</view>