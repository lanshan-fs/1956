page {
  background-color: var(--background);
}

.page-home {
  /* 统一底部间距，避开自定义 TabBar */
  padding-bottom: 200rpx; 
}

/* === Block 3: Waterfall (还原对称间距) === */
.waterfall-container {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  /* 统一对称间距：8rpx */
  padding: 8rpx;
  box-sizing: border-box;
}

.column {
  /* 50% 减去一半的间距 (8rpx / 2 = 4rpx) */
  width: calc(50% - 4rpx); 
}