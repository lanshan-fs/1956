page {
  background-color: var(--background);
}

.page-home {
  padding-bottom: 180rpx;
}

/* === Block 1: Header === */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  background-color: var(--background);
  border-bottom: var(--border-width) solid var(--border-color);
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.03);
}

.nav-content {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  position: relative;
}

.nav-left, .nav-right {
  width: 60rpx;
  height: 100%;
  display: flex;
  align-items: center;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 900;
  color: #1A1A1A;
  letter-spacing: 2rpx;
  font-family: 'Impact', fantasy, sans-serif;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

/* === Block 2: Tabs Section (Flex 布局修复错位) === */
.tabs-section {
  position: sticky;
  z-index: 99;
  background-color: var(--background);
  display: flex; /* 关键：Flex 布局 */
  align-items: center;
  border-bottom: 2rpx solid #EAEAEA;
  box-sizing: border-box;
}

.tabs-scroll {
  flex: 1; /* 占据剩余空间 */
  width: 0; /* 防止被子元素撑开 */
  height: 100%;
  white-space: nowrap;
}

.tabs-container {
  display: flex;
  align-items: center;
  padding: 0 12rpx;
  height: 100%;
}

.tab-item {
  /* 视觉瘦身：更紧凑的 Padding */
  padding: 6rpx 24rpx; 
  font-size: 26rpx;
  color: #666;
  font-weight: bold;
  border-radius: 999rpx;
  margin-right: 12rpx;
  border: 2rpx solid transparent; /* 预留边框位置防止抖动 */
  transition: all 0.2s;
  box-sizing: border-box;
  flex-shrink: 0; /* 防止挤压 */
  
  /* 确保垂直居中 */
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab-item.active {
  background-color: #FFD93D; /* 保持黄色高亮 */
  color: #1A1A1A;
  border: 2rpx solid #000;
  font-weight: 800;
  box-shadow: 2rpx 2rpx 0 0 #000; /* 锐利的投影 */
  transform: translate(-1rpx, -1rpx);
}

/* 更多/编辑按钮 (Flex Item) */
.tabs-more-btn {
  width: 80rpx; /* 固定宽度 */
  height: 100%;
  background-color: var(--background);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 102;
  position: relative; /* 为了阴影 */
  /* 左侧分隔阴影，增强层级感 */
  box-shadow: -10rpx 0 20rpx -10rpx rgba(0,0,0,0.1); 
}

.icon-chevron {
  width: 14rpx;
  height: 14rpx;
  border-right: 3.5rpx solid #1A1A1A;
  border-bottom: 3.5rpx solid #1A1A1A;
  transform: rotate(45deg);
  transition: transform 0.3s;
  margin-top: -4rpx;
}

.tabs-more-btn.open .icon-chevron {
  transform: rotate(-135deg);
  margin-top: 4rpx;
}

/* === 频道下拉面板 (重构) === */
.channel-popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 200;
  display: none;
  opacity: 0;
  transition: opacity 0.2s;
}

.channel-popup-mask.show {
  display: block;
  opacity: 1;
}

.channel-popup-body {
  position: absolute;
  left: 0;
  right: 0;
  background: var(--background);
  padding: 0 24rpx 50rpx;
  border-bottom: var(--border-width) solid var(--border-color);
  border-radius: 0 0 32rpx 32rpx;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.15);
  max-height: 70vh; /* 防止过高 */
  overflow-y: auto;
}

/* Section 样式 */
.popup-section {
  margin-top: 30rpx;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.popup-title-group {
  display: flex;
  align-items: baseline;
}

.p-main-title {
  font-size: 30rpx;
  font-weight: 900;
  color: #1A1A1A;
  margin-right: 16rpx;
}

.p-sub-title {
  font-size: 22rpx;
  color: #999;
}

.popup-edit-btn {
  font-size: 24rpx;
  color: var(--primary);
  font-weight: 700;
  padding: 6rpx 20rpx;
  border: 2rpx solid var(--primary);
  border-radius: 999rpx;
  transition: all 0.2s;
}

.popup-edit-btn.editing {
  background-color: var(--primary);
  color: #fff;
}

/* Grid 布局 */
.popup-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.popup-item {
  position: relative;
  width: 100%;
  height: 64rpx; /* 固定高度 */
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  transition: all 0.2s;
  box-sizing: border-box;
}

.popup-item.active {
  background: #FFD93D;
  border-color: #000;
  color: #1A1A1A;
  font-weight: 800;
}

/* 编辑模式下的抖动动画 */
.popup-item.shake {
  animation: shake 0.3s infinite ease-in-out alternate;
}

@keyframes shake {
  from { transform: rotate(-1deg); }
  to { transform: rotate(1deg); }
}

/* 移除图标 */
.icon-remove {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 28rpx;
  height: 28rpx;
  background: #ccc;
  border-radius: 50%;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.icon-remove .line {
  width: 16rpx;
  height: 4rpx;
  background: #fff;
}

/* 推荐频道样式 */
.popup-item.recommend {
  background: #FAFAFA;
  border: 2rpx dashed #ccc; /* 虚线表示待添加 */
  color: #666;
}

.icon-add {
  font-size: 32rpx;
  font-weight: 300;
  margin-right: 4rpx;
  margin-top: -4rpx;
}

.p-item-text {
  font-size: 24rpx;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 0 4rpx;
}

/* === Block 3: Waterfall (还原对称间距) === */
.waterfall-container {
  display: flex;
  justify-content: space-between;
  padding: 12rpx; 
  align-items: flex-start;
  background-color: var(--background);
}

.column {
  width: calc(50% - 6rpx); 
}