page {
  background-color: var(--background);
  /* 定义一些局部变量方便微调 */
  --tab-height: 88rpx;
}

.page-home {
  padding-bottom: 180rpx; /* 底部 TabBar 留空 */
}

/* === Block 1: Header === */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000; /* 最高层级，保证始终可见 */
  background-color: var(--background);
}

.nav-content {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  position: relative;
}

.nav-left, .nav-right {
  width: 60rpx;
  height: 100%;
  display: flex;
  align-items: center;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 900;
  color: #1A1A1A;
  letter-spacing: 2rpx;
  font-family: 'Impact', fantasy, sans-serif;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

/* === Block 2: Tabs Section === */
.tabs-section {
  position: sticky;
  top: 64px; /* JS会动态修正内容区的padding，这里sticky的top需要根据实际header高度调整，或者直接用fixed的替代方案。为简单起见，利用sticky配合z-index */
  z-index: 99; /* 稍微高一点，浮在内容上，但必须低于 Popup */
  background-color: var(--background);
  height: var(--tab-height);
  display: flex;
  align-items: center;
}

.tabs-scroll {
  flex: 1;
  height: 100%;
  white-space: nowrap;
  mask-image: linear-gradient(to right, black 85%, transparent 100%);
  -webkit-mask-image: linear-gradient(to right, black 85%, transparent 100%);
}

.tabs-container {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  height: 100%;
}

.tab-item {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
  border-radius: 999rpx;
  margin-right: 12rpx;
  border: 4rpx solid transparent;
  transition: all 0.2s;
}

.tab-item.active {
  background-color: #FFD93D;
  color: #1A1A1A;
  border: 4rpx solid #000;
  box-shadow: 4rpx 4rpx 0 0 #000;
  transform: translate(-2rpx, -2rpx);
}

/* 下拉按钮 */
.tabs-more-btn {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 88rpx;
  background-color: var(--background);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: -10rpx 0 20rpx -10rpx rgba(0,0,0,0.1);
  z-index: 102; /* 按钮本身要在最上层，方便点击收起 */
}

.icon-chevron {
  width: 16rpx;
  height: 16rpx;
  border-right: 4rpx solid #1A1A1A;
  border-bottom: 4rpx solid #1A1A1A;
  transform: rotate(45deg);
  margin-top: -6rpx;
  transition: transform 0.3s;
}

.tabs-more-btn.open .icon-chevron {
  transform: rotate(-135deg);
  margin-top: 6rpx;
}

/* === 频道下拉面板 === */
.channel-popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 200; /* 【关键修改】高于 tabs-section (99)，低于 custom-nav (1000) */
  display: none;
  opacity: 0;
  transition: opacity 0.2s;
}

.channel-popup-mask.show {
  display: block;
  opacity: 1;
}

.channel-popup-body {
  position: absolute;
  left: 0;
  right: 0;
  background: var(--background);
  padding: 24rpx;
  border-bottom: 4rpx solid #000;
  border-radius: 0 0 32rpx 32rpx;
  /* top 值由 wxml 行内样式动态控制，紧贴 header */
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #999;
}

/* 关闭叉号 */
.icon-close {
  width: 30rpx;
  height: 30rpx;
  position: relative;
}
.icon-close::before, .icon-close::after {
  content: ''; position: absolute;
  top: 50%; left: 50%;
  width: 100%; height: 4rpx;
  background: #000;
  transform: translate(-50%, -50%) rotate(45deg);
}
.icon-close::after {
  transform: translate(-50%, -50%) rotate(-45deg);
}

.popup-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.popup-item {
  width: 30%;
  text-align: center;
  padding: 16rpx 0;
  background: #fff;
  border: 4rpx solid #eee;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.popup-item.active {
  background: #FFD93D;
  border-color: #000;
  color: #000;
  box-shadow: 4rpx 4rpx 0 0 #000;
}

/* === Block 3: Waterfall === */
.waterfall-container {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 12rpx;
  align-items: flex-start;
}

.column {
  width: 48%;
}