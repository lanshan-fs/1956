page {
  background-color: var(--background);
}

.page-home {
  padding-bottom: 180rpx;
}

/* === Block 1: Header === */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  background-color: var(--background);
  /* 增加标志性黑线 */
  border-bottom: var(--border-width) solid var(--border-color);
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.03); /* 极细微投影 */
}

.nav-content {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  position: relative;
}

.nav-left, .nav-right {
  width: 60rpx;
  height: 100%;
  display: flex;
  align-items: center;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 900;
  color: #1A1A1A;
  letter-spacing: 2rpx;
  font-family: 'Impact', fantasy, sans-serif;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

/* === Block 2: Tabs Section (精准合拢方案) === */
.tabs-section {
  position: sticky; 
  /* 吸附位置由 wxml 的 stickyTop 计算提供 */
  z-index: 99; 
  background-color: var(--background);
  display: flex;
  align-items: center;
  /* 标签栏底部的细灰线 */
  border-bottom: 2rpx solid #EAEAEA;
}

.tabs-scroll {
  flex: 1;
  height: 100%;
  white-space: nowrap;
}

.tabs-container {
  display: flex;
  align-items: center;
  padding: 0 12rpx;
  height: 100%;
}

.tab-item {
  padding: 8rpx 20rpx;
  font-size: 26rpx; /* 字体微调小 */
  color: #666;
  font-weight: bold;
  border-radius: 999rpx;
  margin-right: 8rpx;
  border: 4rpx solid transparent;
  transition: all 0.2s;
}

.tab-item.active {
  background-color: #FFD93D;
  color: #1A1A1A;
  border: 4rpx solid #000;
  box-shadow: 4rpx 4rpx 0 0 #000;
  transform: translate(-2rpx, -2rpx);
}

.tabs-more-btn {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 70rpx;
  background-color: var(--background);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 102;
}

.icon-chevron {
  width: 14rpx;
  height: 14rpx;
  border-right: 3.5rpx solid #1A1A1A;
  border-bottom: 3.5rpx solid #1A1A1A;
  transform: rotate(45deg);
  margin-top: -4rpx;
  transition: transform 0.3s;
}

.tabs-more-btn.open .icon-chevron {
  transform: rotate(-135deg);
  margin-top: 4rpx;
}

/* === 频道下拉面板 (网格修复) === */
.channel-popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 200; 
  display: none;
  opacity: 0;
  transition: opacity 0.2s;
}

.channel-popup-mask.show {
  display: block;
  opacity: 1;
}

.channel-popup-body {
  position: absolute;
  left: 0;
  right: 0;
  background: var(--background);
  padding: 30rpx 24rpx 50rpx;
  border-bottom: var(--border-width) solid var(--border-color);
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.1);
}

.p-main-title {
  font-size: 32rpx;
  font-weight: 900;
  color: var(--text-main);
  margin-right: 16rpx;
}

.p-sub-title {
  font-size: 22rpx;
  color: #999;
  font-weight: 500;
}

.popup-edit-btn {
  font-size: 24rpx;
  color: var(--primary);
  font-weight: 900;
  padding: 8rpx 24rpx;
  border: 2rpx solid var(--primary);
  border-radius: 999rpx;
}

.popup-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.popup-item {
  width: 100%;
  text-align: center;
  padding: 20rpx 0;
  background: #fff;
  border: var(--border-width) solid #eee;
  border-radius: 12rpx;
  transition: all 0.2s;
  box-sizing: border-box;
}

.popup-item.active {
  background: var(--accent);
  border-color: var(--border-color);
  color: var(--text-main);
  box-shadow: 4rpx 4rpx 0 0 var(--border-color);
  transform: translate(-2rpx, -2rpx);
}

.p-item-text {
  font-size: 26rpx;
  font-weight: 800;
}

/* === Block 3: Waterfall (还原对称间距) === */
.waterfall-container {
  display: flex;
  justify-content: space-between;
  padding: 12rpx; /* 对称 12rpx */
  align-items: flex-start;
  background-color: var(--background);
}

.column {
  width: calc(50% - 6rpx); 
}