page {
  background-color: var(--background);
}

.page-search {
  position: relative;
  height: 100vh;
  box-sizing: border-box;
}

/* 1. 自定义导航栏 */
.search-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: var(--background);
  z-index: 1000;
  border-bottom: 2rpx solid var(--border-color);
}

.nav-content-wrapper {
  position: absolute;
  left: 0;
  width: 100%;
  /* 高度和 top 由 WXML 动态控制 */
  display: flex;
  align-items: center;
  padding: 0 16rpx;
  box-sizing: border-box;
}

.nav-left {
  width: 60rpx; /* 返回按钮 */
  height: 100%;
  display: flex;
  align-items: center;
  margin-right: 16rpx;
}

.icon-back {
  width: 20rpx;
  height: 20rpx;
  border-left: 4rpx solid #1A1A1A;
  border-bottom: 4rpx solid #1A1A1A;
  transform: rotate(45deg);
  margin-left: 8rpx;
}

/* 搜索框 */
.search-input-box {
  flex: 1;
  height: 64rpx;
  background: #fff;
  border: 4rpx solid #1A1A1A;
  box-shadow: 4rpx 4rpx 0 #1A1A1A;
  border-radius: 999rpx; /* 全圆角 */
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  position: relative;
}

.icon-search {
  font-size: 28rpx;
  margin-right: 12rpx;
  color: #666;
}

.real-input {
  flex: 1;
  font-size: 28rpx;
  color: #1A1A1A;
  height: 100%;
}

.icon-clear {
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  background: #ccc;
  border-radius: 50%;
  color: #fff;
  font-size: 24rpx;
}

/* 2. 内容滚动区 */
.search-scroll {
  height: 100vh;
  box-sizing: border-box;
}

/* 默认视图：历史+热搜 */
.default-view {
  padding: 24rpx;
}

.section-block {
  margin-bottom: 48rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 900;
  color: #1A1A1A;
}

.icon-delete {
  font-size: 36rpx;
  color: #999;
}

/* 标签云 */
.tags-wrapper {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.neo-tag {
  padding: 10rpx 24rpx;
  border: 2rpx solid #1A1A1A;
  background: #fff;
  font-size: 26rpx;
  font-weight: 500;
  border-radius: 999rpx;
  color: #1A1A1A;
}

/* 热搜列表 */
.hot-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx; /* 网格间距 */
}

.hot-item {
  width: 48%; /* 双列布局 */
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.rank-num {
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 900;
  color: #999;
  background: #f0f0f0;
  border-radius: 6rpx;
  margin-right: 16rpx;
}

.rank-num.top {
  color: #fff;
  background: #FF4D4F; /* 红色 */
}

.hot-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #1A1A1A;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.hot-tag {
  font-size: 20rpx;
  color: #fff;
  padding: 2rpx 6rpx;
  border-radius: 4rpx;
  margin-left: 8rpx;
}

.hot-tag.new { background: #52C41A; }
.hot-tag.hot { background: #FF4D4F; }

/* 3. 搜索结果 */
.result-view {
  min-height: 500rpx;
}

.waterfall-container {
  display: flex;
  justify-content: space-between;
  padding: 12rpx; 
  align-items: flex-start;
}

.column {
  width: calc(50% - 6rpx); 
}

.empty-result {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}