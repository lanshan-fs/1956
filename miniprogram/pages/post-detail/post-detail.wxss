page {
  background-color: var(--background);
}

.page-detail {
  position: relative;
  height: 100vh;
  overflow: hidden;
  box-sizing: border-box;
}

/* 1. 自定义导航栏 */
.detail-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: var(--background);
  z-index: 1000;
  border-bottom: 2rpx solid var(--border-color);
}

.nav-content-wrapper {
  position: absolute;
  left: 0;
  width: 100%;
  /* 高度和 top 由 WXML 动态控制 */
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 16rpx;
  box-sizing: border-box;
}

.nav-left {
  width: 60rpx; /* 稍宽便于点击 */
  height: 100%;
  display: flex;
  align-items: center;
}

.icon-back {
  width: 20rpx;
  height: 20rpx;
  border-left: 4rpx solid #1A1A1A;
  border-bottom: 4rpx solid #1A1A1A;
  transform: rotate(45deg);
  margin-left: 8rpx;
}

.nav-center {
  flex: 1;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.mini-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  border: 2rpx solid #1A1A1A;
  margin-right: 12rpx;
}

.mini-name {
  font-size: 26rpx;
  font-weight: 700;
  color: #1A1A1A;
  margin-right: 16rpx;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.mini-follow-btn {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border: 2rpx solid #1A1A1A;
  border-radius: 999rpx;
  background: #FFD93D;
  color: #1A1A1A;
  font-weight: 700;
}

.nav-right-placeholder {
  width: 180rpx; /* 预留给胶囊的位置 */
  height: 100%;
}

/* 滚动区域 */
.detail-scroll {
  width: 100%;
  height: 100vh; /* 占满全屏 */
  box-sizing: border-box;
  /* padding-top 由 style 动态设置 */
}

/* 2. 轮播图 */
.media-swiper-wrapper {
  position: relative;
  margin-bottom: 24rpx;
  border-bottom: 4rpx solid #1A1A1A;
}

.media-swiper {
  width: 100%;
  height: 750rpx; /* 1:1 比例 */
  background: #f0f0f0;
}

.swiper-img {
  width: 100%;
  height: 100%;
}

.swiper-indicator {
  position: absolute;
  bottom: 24rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 12rpx;
  background: rgba(0,0,0,0.5);
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #fff;
  opacity: 0.5;
  transition: all 0.2s;
}

.dot.active {
  opacity: 1;
  transform: scale(1.2);
}

/* 3. 内容区 */
.content-body {
  padding: 0 32rpx;
  margin-bottom: 40rpx;
}

.post-title {
  font-size: 36rpx;
  font-weight: 900;
  color: #1A1A1A;
  margin-bottom: 24rpx;
  line-height: 1.4;
}

.post-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
  white-space: pre-wrap;
  margin-bottom: 24rpx;
  display: block;
}

.post-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tag-item {
  color: #4A90E2;
  font-weight: 700;
  font-size: 28rpx;
}

.post-meta-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

.divider-line {
  height: 2rpx;
  background: #EAEAEA;
  margin-top: 32rpx;
}

/* 4. 评论区 */
.comments-section {
  padding: 32rpx;
}

.comments-header {
  font-size: 28rpx;
  font-weight: 800;
  margin-bottom: 24rpx;
}

.comment-item {
  display: flex;
  margin-bottom: 32rpx;
}

.c-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 2rpx solid #1A1A1A;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.c-content {
  flex: 1;
}

.c-name {
  font-size: 26rpx;
  color: #666;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.c-text {
  font-size: 28rpx;
  color: #1A1A1A;
  line-height: 1.4;
}

.c-time {
  font-size: 22rpx;
  color: #999;
  margin-left: 12rpx;
}

.c-like {
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
  font-size: 32rpx;
}

.empty-comments {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 5. 底部操作栏 */
.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  border-top: 4rpx solid #1A1A1A;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-sizing: border-box;
  z-index: 100;
  /* 适配 iPhone X 底部 */
  padding-bottom: calc(env(safe-area-inset-bottom) + 12rpx);
  padding-top: 12rpx;
}

.input-wrapper {
  flex: 1;
  height: 72rpx;
  background: #F5F5F5;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  margin-right: 24rpx;
  border: 2rpx solid #1A1A1A;
}

.placeholder-text {
  font-size: 28rpx;
  color: #888;
  margin-left: 12rpx;
}

.action-group {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  min-width: 60rpx;
}

.icon-heart, .icon-star, .icon-comment {
  font-size: 44rpx;
  color: #1A1A1A;
  line-height: 1;
  transition: transform 0.2s;
}

.icon-heart.active {
  color: #FF4D4F;
  transform: scale(1.1);
}

.icon-star.active {
  color: #FFD93D;
  transform: scale(1.1);
}

.action-count {
  font-size: 20rpx;
  color: #1A1A1A;
  margin-top: 4rpx;
  font-weight: 700;
}

/* 输入框面板 */
.comment-popup-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 150;
}

.comment-input-panel {
  position: fixed;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx;
  border-top: 4rpx solid #1A1A1A;
  z-index: 200;
  /* 适配键盘 */
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  display: flex;
  align-items: flex-end;
}

.real-input {
  flex: 1;
  background: #F5F5F5;
  padding: 16rpx;
  border-radius: 16rpx;
  border: 2rpx solid #1A1A1A;
  height: 120rpx;
  font-size: 30rpx;
  margin-right: 20rpx;
}

.send-btn {
  background: #FFD93D;
  color: #1A1A1A;
  font-weight: 800;
  padding: 16rpx 32rpx;
  border: 3rpx solid #1A1A1A;
  border-radius: 12rpx;
  box-shadow: 4rpx 4rpx 0 #1A1A1A;
}

.send-btn:active {
  transform: translate(2rpx, 2rpx);
  box-shadow: 2rpx 2rpx 0 #1A1A1A;
}