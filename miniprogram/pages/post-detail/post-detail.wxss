page {
  background-color: var(--background);
}

.page-detail {
  min-height: 100vh;
}

/* 1. 自定义导航栏 */
.detail-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  background-color: var(--background);
  border-bottom: 2rpx solid #EAEAEA;
}

.nav-content-wrapper {
  position: absolute;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  padding-left: 24rpx;
  box-sizing: border-box;
}

.nav-left {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-back {
  width: 20rpx;
  height: 20rpx;
  border-left: 4rpx solid #1A1A1A;
  border-bottom: 4rpx solid #1A1A1A;
  transform: rotate(45deg);
}

.nav-center {
  flex: 1;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

/* 动态模式下的头像昵称 */
.user-mini-profile {
  opacity: 1;
  transition: opacity 0.3s;
}

.mini-avatar {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  border: 2rpx solid #1A1A1A;
  margin-right: 12rpx;
}

.mini-name {
  font-size: 26rpx;
  font-weight: 700;
  color: #1A1A1A;
  margin-right: 12rpx;
}

.mini-follow-btn {
  font-size: 22rpx;
  padding: 4rpx 20rpx;
  border: 2rpx solid var(--primary);
  color: var(--primary);
  border-radius: 30rpx;
  font-weight: 700;
}

/* 集市模式下的搜索图标 */
.market-nav-title {
  display: flex;
  align-items: center;
}

.search-icon-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border: 2rpx solid #000;
  border-radius: 50%;
  box-shadow: 2rpx 2rpx 0 0 #000;
  margin-right: 20rpx;
}

.nav-title-text {
  font-size: 28rpx;
  font-weight: 900;
  color: #1A1A1A;
}

/* 2. 图片轮播 */
.media-swiper-wrapper {
  position: relative;
  width: 100%;
  background-color: #000;
}

.media-swiper {
  width: 100%;
  height: 800rpx; /* 可根据需要调整 */
}

.swiper-img {
  width: 100%;
  height: 100%;
}

.swiper-indicator {
  position: absolute;
  bottom: 24rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 12rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.4);
}

.dot.active {
  background: #fff;
  width: 24rpx;
  border-radius: 6rpx;
}

/* 3. 内容主体 */
.content-body {
  padding: 30rpx 30rpx 20rpx;
  background-color: var(--background);
}

/* 集市专属：卖家信息 & 价格 */
.market-seller-row {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 16rpx;
  background: #fff;
  border: 3rpx solid #000;
  border-radius: 12rpx;
  box-shadow: 4rpx 4rpx 0 0 #000;
}

.seller-avatar {
  width: 80rpx;
  height: 80rpx;
  border: 3rpx solid #000;
  border-radius: 50%;
  margin-right: 20rpx;
}

.seller-info {
  flex: 1;
}

.seller-name {
  font-size: 28rpx;
  font-weight: 800;
  color: #000;
  margin-bottom: 4rpx;
}

.seller-last-seen {
  font-size: 22rpx;
  color: #666;
}

.seller-arrow {
  font-size: 24rpx;
  color: #999;
}

.market-price-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 24rpx;
  padding: 20rpx 0;
  border-bottom: 2rpx dashed #EAEAEA;
}

.price-label {
  font-size: 24rpx;
  color: #666;
  margin-right: 12rpx;
  font-weight: 600;
}

.currency {
  font-size: 32rpx;
  font-weight: 900;
  color: var(--primary);
  margin-right: 4rpx;
}

.price-value {
  font-size: 52rpx;
  font-weight: 900;
  color: var(--primary);
  font-family: 'Arial', sans-serif;
}

/* 通用标题内容 */
.post-title {
  font-size: 38rpx;
  font-weight: 900;
  color: #1A1A1A;
  line-height: 1.4;
  margin-bottom: 24rpx;
}

.post-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  white-space: pre-wrap;
  margin-bottom: 30rpx;
}

.post-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 30rpx;
}

.tag-item {
  font-size: 26rpx;
  color: #576b95; /* 类似社交软件标签色 */
  font-weight: 600;
}

.post-meta-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.meta-date {
  font-size: 24rpx;
  color: #999;
}

.meta-views {
  font-size: 24rpx;
  color: #999;
}

.divider-line {
  height: 1rpx;
  background-color: #EAEAEA;
  margin-top: 30rpx;
}

/* 4. 评论区 */
.comments-section {
  padding: 30rpx;
}

.comments-header {
  font-size: 28rpx;
  font-weight: 900;
  color: #1A1A1A;
  margin-bottom: 30rpx;
}

.comment-item {
  display: flex;
  margin-bottom: 40rpx;
}

.c-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 1rpx solid #eee;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.c-content {
  flex: 1;
}

.c-name {
  font-size: 24rpx;
  font-weight: 700;
  color: #666;
  margin-bottom: 8rpx;
}

.c-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.c-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}

.c-like {
  width: 60rpx;
  text-align: right;
  font-size: 28rpx;
  color: #999;
}

.empty-comments {
  padding: 60rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

/* 5. 底部固定栏 */
.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: var(--background);
  border-top: 1rpx solid #EAEAEA;
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx calc(16rpx + env(safe-area-inset-bottom));
  z-index: 1001;
}

.input-wrapper {
  flex: 1;
  height: 72rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  margin-right: 24rpx;
}

.icon-edit {
  font-size: 24rpx;
  color: #999;
  margin-right: 12rpx;
}

.placeholder-text {
  font-size: 26rpx;
  color: #999;
}

.action-group {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.icon-heart, .icon-star, .icon-comment {
  font-size: 40rpx;
  color: #333;
  line-height: 1;
}

.icon-heart.active {
  color: var(--primary);
}

.icon-star.active {
  color: var(--accent);
}

.action-count {
  font-size: 20rpx;
  color: #666;
  margin-top: 4rpx;
}

/* 集市详情按钮 */
.contact-btn {
  background-color: var(--accent);
  color: #000;
  font-size: 28rpx;
  font-weight: 900;
  padding: 16rpx 40rpx;
  border: 4rpx solid #000;
  border-radius: 12rpx;
  box-shadow: 4rpx 4rpx 0 0 #000;
  white-space: nowrap;
}

.contact-btn:active {
  transform: translate(2rpx, 2rpx);
  box-shadow: 2rpx 2rpx 0 0 #000;
}

/* 输入面板 */
.comment-popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.4);
  z-index: 2000;
}

.comment-input-panel {
  position: fixed;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 24rpx;
  display: flex;
  align-items: flex-end;
  box-sizing: border-box;
  z-index: 2001;
  transition: bottom 0.3s;
  border-radius: 32rpx 32rpx 0 0;
}

.real-input {
  flex: 1;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  height: 160rpx;
  margin-right: 20rpx;
}

.send-btn {
  background: var(--primary);
  color: #fff;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 700;
}