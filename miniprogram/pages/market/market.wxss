/* pages/market/market.wxss */
page {
  background-color: var(--background);
  /* 增加底部间距，避开自定义 TabBar */
  padding-bottom: 200rpx; 
}

/* --- 顶部组件内元素样式 --- */
/* 校区选择器包装容器 */
picker[slot="left"] {
  height: 100%;
}

/* 校区选择器内部视图 */
.campus-picker {
  display: flex;
  align-items: center;
  background-color: #fff;
  border: var(--border-width) solid var(--border-color);
  padding: 0 24rpx; /* 稍微增加内边距 */
  border-radius: 40rpx; /* 恢复为圆角胶囊 */
  margin-right: 16rpx;
  box-shadow: 2rpx 2rpx 0 0 #000;
  flex-shrink: 0;
  height: 100%;
  box-sizing: border-box;
}

.campus-picker:active {
  transform: translate(1rpx, 1rpx);
  box-shadow: 1rpx 1rpx 0 0 #000;
}

.campus-text {
  font-size: 26rpx;
  font-weight: 800;
  color: #000;
  margin-right: 6rpx;
}

.picker-arrow {
  font-size: 14rpx;
  color: #000;
  margin-top: 4rpx;
}

/* 搜索框 */
.search-bar {
  flex: 1;
  background-color: #fff;
  border: var(--border-width) solid var(--border-color);
  border-radius: 40rpx; /* 恢复为圆角胶囊 */
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-shadow: 2rpx 2rpx 0 0 #000;
  height: 100%; /* 与容器（胶囊）高度完全对齐 */
  box-sizing: border-box;
  overflow: hidden;
}

.search-placeholder {
  margin-left: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #999;
  white-space: nowrap;
}

/* --- 瀑布流 --- */
.waterfall-container {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  /* 统一对称间距：8rpx */
  padding: 8rpx;
  box-sizing: border-box;
}

.waterfall-col {
  /* 50% 减去一半的间距 (8rpx / 2 = 4rpx) */
  width: calc(50% - 4rpx);
  display: flex;
  flex-direction: column;
}

/* --- 悬浮按钮 (FAB) --- */
.fab-btn {
  position: fixed;
  bottom: 220rpx; /* Increased to avoid TabBar overlap */
  right: 40rpx;
  background-color: #FFD93D;
  border: 4rpx solid #000;
  border-radius: 50rpx;
  padding: 16rpx 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 8rpx 8rpx 0 0 #000;
  z-index: 200;
  transition: all 0.2s;
}

.fab-btn:active {
  transform: translate(4rpx, 4rpx);
  box-shadow: 4rpx 4rpx 0 0 #000;
}

.fab-icon {
  font-size: 40rpx;
  font-weight: 900;
  margin-right: 8rpx;
  line-height: 1;
}

.fab-text {
  font-size: 28rpx;
  font-weight: 800;
}