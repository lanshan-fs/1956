<view class="neo-nav-wrapper" style="padding-top: {{statusBarHeight}}px;">
  <view class="nav-main" style="height: {{navBarHeight}}px;">
    
    <!-- 默认模式 -->
    <block wx:if="{{mode === 'default'}}">
      <view class="nav-content">
        <view class="nav-left" bindtap="onLeftTap">
          <!-- 动态左侧图标 -->
          <icon wx:if="{{leftIcon === 'search'}}" type="search" size="20" color="#1A1A1A"/>
          <view wx:else class="back-icon"></view>
        </view>
        <view class="nav-title" bindtap="onTitleTap">{{title}}</view>
        <view class="nav-right"></view>
      </view>
    </block>

    <!-- 自定义模式 -->
    <block wx:else>
      <view class="nav-custom-content" style="height: {{menuButtonInfo.height}}px; padding-right: {{navPaddingRight}}px;">
        <slot name="left"></slot>
        <slot name="center"></slot>
      </view>
    </block>

  </view>
  <view class="nav-border"></view>
</view>
<!-- 占位，确保 fixed 元素高度被占位 -->
<view style="height: {{navHeaderHeight}}px;"></view>