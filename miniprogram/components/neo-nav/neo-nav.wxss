.neo-nav-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  background-color: var(--background);
}

.nav-main {
  width: 100%;
  display: flex;
  align-items: center;
}

.nav-content {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  position: relative;
}

.nav-left, .nav-right {
  width: 80rpx;
  height: 100%;
  display: flex;
  align-items: center;
}

/* 返回箭头样式：Neobrutalism 粗线风格 */
.back-icon {
  width: 20rpx;
  height: 20rpx;
  border-left: 5rpx solid var(--text-main);
  border-bottom: 5rpx solid var(--text-main);
  transform: rotate(45deg);
  margin-left: 8rpx;
}

.nav-title {
  font-size: 32rpx; /* 微调：从 34rpx 降至 32rpx 以适应长标题并统一视觉 */
  font-weight: 800; /* 从 900 降至 800，显得更精致 */
  color: var(--text-main);
  letter-spacing: 1rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  white-space: nowrap;
}

/* 自定义模式布局 */
.nav-custom-content {
  display: flex;
  align-items: center;
  width: 100%;
  padding-left: 24rpx;
  box-sizing: border-box;
}

.nav-border {
  width: 100%;
  height: 0;
  border-bottom: var(--border-width) solid var(--border-color);
}