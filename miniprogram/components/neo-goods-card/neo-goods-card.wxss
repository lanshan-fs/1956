/* Refined Clean Card (No Border/Shadow for dense Feed) */
.goods-card {
  width: 100%;
  background: #fff;
  border-radius: 16rpx; /* 增加圆角，更符合 ToC 审美 */
  overflow: hidden;
  margin-bottom: 12rpx; /* 卡片间距 */
  transition: opacity 0.1s ease;
  /* 移除 border 和 box-shadow */
}

.goods-card:active {
  opacity: 0.8;
}

.image-wrapper {
  position: relative;
  width: 100%;
  background: #f0f0f0;
  /* 移除图片下方的黑线 */
}

.goods-image {
  width: 100%;
  display: block;
}

.campus-tag {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  background: rgba(0, 0, 0, 0.6); /* 半透明黑色 */
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.content {
  padding: 16rpx 12rpx;
}

.goods-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1A1A1A;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.price-row {
  display: flex;
  align-items: baseline;
  margin-top: 12rpx;
}

.currency {
  font-size: 22rpx;
  font-weight: bold;
  color: #FF4D4D;
}

.price {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF4D4D;
  margin-right: 8rpx;
}

.condition {
  font-size: 18rpx;
  color: #666;
  background: #f5f5f5;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.seller-row {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}

.seller-avatar {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  margin-right: 8rpx;
  background: #eee;
}

.seller-name {
  font-size: 20rpx;
  color: #999;
  flex: 1;
}