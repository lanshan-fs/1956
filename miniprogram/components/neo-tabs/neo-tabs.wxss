/* Neobrutalism Tabs (Unified - Based on Index Page) */
.tabs-container {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}

.tabs-scroll {
  width: 100%;
  height: 80rpx; /* Fixed height container */
  white-space: nowrap;
}

.scroll-inner {
  display: flex;
  align-items: center;
  padding: 0 12rpx;
  height: 100%;
}

.tab-item {
  /* 视觉瘦身：更紧凑的 Padding */
  padding: 6rpx 24rpx; 
  font-size: 26rpx;
  color: #666;
  font-weight: bold;
  border-radius: 999rpx; /* Capsule */
  margin-right: 12rpx;
  border: 2rpx solid transparent; /* 预留边框位置防止抖动 */
  transition: all 0.2s;
  box-sizing: border-box;
  flex-shrink: 0; /* 防止挤压 */
  
  /* 确保垂直居中 */
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab-item.active {
  background-color: #FFD93D; /* 黄色高亮 */
  color: #1A1A1A;
  border: 2rpx solid #000;
  font-weight: 800;
  box-shadow: 2rpx 2rpx 0 0 #000; /* 锐利的投影 */
  transform: translate(-1rpx, -1rpx);
}

.spacer {
  width: 24rpx;
  flex-shrink: 0;
  height: 1rpx;
}