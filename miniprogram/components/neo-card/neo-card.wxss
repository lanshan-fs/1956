/* Clean Card Style for Home Feed (Xiaohongshu-like) */
.neo-card {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 8rpx; /* 与集市统一：4rpx 间距，此处设为 8rpx 包含底部间隙 */
  transition: opacity 0.1s ease;
  position: relative;
  word-break: break-all;
}

.neo-card:active {
  opacity: 0.8;
}

/* 图片容器 */
.card-image-wrapper {
  width: 100%;
  background-color: #f5f5f5;
  overflow: hidden;
  min-height: 160rpx;
  position: relative;
}

.card-image {
  width: 100%;
  display: block;
}

/* 价格标签 (如果首页有) */
.price-tag {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  background-color: var(--accent);
  color: #000;
  padding: 4rpx 10rpx;
  font-size: 20rpx;
  font-weight: 800;
  border-radius: 6rpx;
  z-index: 2;
}

/* 内容区 */
.card-content {
  padding: 12rpx 10rpx;
  background-color: #fff;
}

/* 标题 */
.card-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1A1A1A;
  line-height: 1.4;
  margin-bottom: 12rpx;
  letter-spacing: 0.5rpx;
}

/* 底部栏 */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 4rpx;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  flex: 1;
  overflow: hidden;
  margin-right: 12rpx;
}

.avatar {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  margin-right: 8rpx;
  background-color: #eee;
  flex-shrink: 0;
}

.username {
  font-size: 20rpx;
  color: #999;
  font-weight: 400;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 点赞区域 */
.like-wrapper {
  display: flex;
  align-items: center;
}

.heart-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
  display: flex;
  align-items: center;
}

.heart-icon::before {
  content: '♡';
  font-size: 28rpx;
  color: #999;
}

.heart-icon.liked::before {
  content: '♥';
  color: var(--primary);
}

.like-count {
  font-size: 22rpx;
  color: #999;
  font-weight: 500;
}

/* 文本截断工具类 */
.text-clamp-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}