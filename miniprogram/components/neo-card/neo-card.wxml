<view class="neo-card custom-class" bind:tap="onTap">
  <view class="card-image-wrapper">
    <image 
      class="card-image" 
      src="{{ cover }}" 
      mode="widthFix" 
      lazy-load
    />
    <view class="price-tag" wx:if="{{price}}">Â¥{{price}}</view>
  </view>
  
  <view class="card-content">
    <view class="card-title text-clamp-2">{{ title }}</view>
    
    <view class="card-footer">
      <view class="user-info">
        <image class="avatar" src="{{ avatar || '/images/default-avatar.png' }}" mode="aspectFill"></image>
        <text class="username text-clamp-1">{{ nickname }}</text>
      </view>
      
      <view class="like-wrapper" catchtap="onLike">
        <view class="heart-icon {{isLiked ? 'liked' : ''}}"></view>
        <text class="like-count">{{ likes }}</text>
      </view>
    </view>
  </view>
</view>